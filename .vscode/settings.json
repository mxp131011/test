{
    "editor.formatOnSave": true,
    "eslint.format.enable": true,
    //autoFix默认开启，只需输入字符串数组即可
    "editor.tabSize": 4,
    "[vue]": {
        "editor.defaultFormatter": "Wscats.vue"
    },
    "vetur.format.defaultFormatter.js": "vscode-typescript",
    "files.exclude": {
        "jsconfig.json": true,
        ".browserslistrc": true,
        ".editorconfig": true,
        ".eslintignore": true,
        ".hintrc": true,
        ".vscode": true,
        "**/.svg": true
    },
    "[xml]": {
        "editor.defaultFormatter": "DotJoshJohnson.xml"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "typescript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
    "javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
    "minapp-vscode.formatMaxLineCharacters": 180,
    "editor.fontFamily": "Consolas, '微软雅黑 Light', monospace",
    "beautify.language": {
        "js": {
            "type": ["javascript", "json", "jsonc"],
            "filename": [".jshintrc", ".jsbeautifyrc"]
        },
        "css": ["css", "less", "scss"],
        "html": ["htm", "html"]
    },
    "css.validate": false,
    "less.validate": false,
    "scss.validate": false,
    "stylelint.validate": ["css", "scss"],
    "editor.codeActionsOnSave": {
        "source.fixAll.stylelint": true // // stylelint 自动修复
    },
    "[scss]": {
        "editor.defaultFormatter": "stylelint.vscode-stylelint"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "search.exclude": {
        ".eslintrc": true,
        ".git": true,
        ".stylelintrc.js": true,
        ".svn": true,
        "jsconfig.json": true,
        "**/*.svg": true
    },
    "stylelint.snippet": ["css", "less", "postcss", "scss", "sass"],
    "path-intellisense.extensionOnImport": true,
    "vue3snippets.endOfLine": "auto",
    "vue3snippets.jsxBracketSameLine": true,
    "vue3snippets.printWidth": 160,
    "vue3snippets.quoteProps": "consistent",
    "vue3snippets.singleQuote": true,
    "vue3snippets.tabWidth": 4,
    "vue3snippets.vueIndentScriptAndStyle": true,
    "prettier.endOfLine": "auto",
    "prettier.printWidth": 160,
    "prettier.quoteProps": "consistent",
    "prettier.singleQuote": true,
    "prettier.tabWidth": 4,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "vue3snippets.enable-compile-vue-file-on-did-save-code": true,
    "window.zoomLevel": 0.5
}
